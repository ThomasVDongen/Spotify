@using Spotify.Models.Objecten
@model List<Spotify.Models.Objecten.Album>

@{
    ViewBag.Title = "Albums";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Vieuw.css" rel="stylesheet" />
<h2>Albums</h2>
@if (Model.Count == 0)
{
    <h3>Je hebt nog geen albums toegevoegd aan je muziek</h3>
}
else
{
    <table>
        <tr>
            <th>Titel:</th>
            <th>Artiest:</th>
            <th>Releasedate:</th>

        </tr>

        @foreach (Album album in Model)
        {
            <tr>
                <td>@Html.ActionLink(album.Titel, "Index", "Album", new {id = album.ID }, null)</td>
                <td>@Html.ActionLink(album.Artist.Name, "Index", "Artiest", new { artistid = album.Artist.ID }, null)</td>
                <td>@album.ReleaseDate.ToShortDateString()</td>
            </tr>
        }

    </table>

}


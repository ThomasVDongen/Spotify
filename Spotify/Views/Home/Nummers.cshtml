@using Spotify.Models.Objecten
@model List<Spotify.Models.Objecten.Song>
@{
    ViewBag.Title = "Nummers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Vieuw.css" rel="stylesheet" />
<h2>Nummers</h2>
@if (Model.Count != 0)
{

    foreach (Song song in Model)
    {
        string artiest = "Artiest:";
        if (song.Artists.Count > 1)
        {
            artiest = "Artiesten:";
        }
        <table style="width: 80%">
            <tr>
                <th>@Html.Label("Name:")</th>
                <th>@Html.Label("Speelduur:")</th>
                <th>@Html.Label("Genres:")</th>
                <th>@Html.Label(artiest)</th>
                <th></th>
            </tr>
            <tr>@Html.Action("Song", "Song", new { id = song.ID })</tr>
        </table>
    }
}



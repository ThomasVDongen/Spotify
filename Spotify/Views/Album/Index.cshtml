@using Spotify.Models.Objecten
@model Spotify.Models.Objecten.Album

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Vieuw.css" rel="stylesheet" />
<link href="~/Content/Album.css" rel="stylesheet"/>

<h2>Album: @Model.Titel</h2>
<div class="floatleft">
    <h3>Nummers:</h3>
    <table>
        <tr>
            <th>Naam:</th>
            <th>Speelduur:</th>
        </tr>
        @foreach (Song song in Model.Songs)
        {

            <tr>
                <td>@song.Name</td>
                <td>@song.Speelduur.ToString("N2")</td>
            </tr>
        }
    </table>
</div>

<div class="floatright">
    <h3>Albuminfo:</h3>
    <p>Artiest: @Model.Artist.Name</p>
    <br/>
    <p>Releasedate: @Model.ReleaseDate.ToShortDateString()</p>
</div>


